@model IEnumerable<Doctor>

<body>
    <!-- Breadcrumb Section Start -->
    <div class="breadcrumb-area bg-ash">
        <div class="breadcrumb-wrap bg-f bg-3 position-relative z-1 round-20">
            <img src="~/img/breadcrumb/br-shape-1.png" alt="Shape" class="br-shape-one position-absolute z-1 bounce">
            <img src="~/img/breadcrumb/br-shape-2.png" alt="Shape" class="br-shape-two position-absolute z-1 rotate">
            <div class="container">
                <h2 class="section-title fw-bold text-white text-center mb-13">Doctors List</h2>
                <ul class="br-menu text-center list-unstyled mb-0">
                    <li class="position-relative fs-xx-14 d-inline-block"><a href="/Home/Index">Home</a></li>
                    <li class="position-relative fs-xx-14 d-inline-block">Doctors List</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section End -->

    <!-- Doctor Search Section Start -->
    <div class="container style-one pt-120 pb-90">
        <div class="text-center"> 
            <h6 class="section-subtitle fw-medium font-primary d-inline-block text_secondary position-relative mb-15" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="200">OUR DOCTORS</h6> 
            <h2 class="section-title fw-black text-title text-center mb-35" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="300">Meet The specialist Team</h2>
        </div>
        <!-- Doctor Search Section Start -->
        <div class="container style-one pt-10 pb-10">
            <div class="filter-box style-one round-20">
                @* <form action="/Doctors/DoctorsList" class="form-wrapper" method="post"> *@

                <form method="get" action="/Doctors/DoctorsList" class="form-wrapper">
                    <div class="row">
                        <div class="col-xl-3 col-md-6">
                            <div class="form-group mb-25">
                                <label for="name" class="text-title fw-medium fs-xx-14 d-block mb-13">Name</label>
                                <input type="text" placeholder="Type A Name" value="@ViewBag.DoctorName" class="fs-xx-14 w-100 ht-56 round-10 bg-ash text-para border-0" name="doctor_name" id="name">
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="form-group mb-25">
                                <label for="specialization_name" class="text-title fs-xx-14 fw-medium d-block mb-13">Specialization</label>
                                <select name="specialization_id" id="specialization_name" class="fs-xx-14 w-100 ht-56 round-10 bg-ash text-para border-0">
                                    <option value="0">Select Specialization</option>
                                    @if (ViewData["specialities"] is List<Speciality> specialities)
                                        foreach (var item in specialities)
                                        {
                                            if (item.Id == ViewBag.SpecializationId)
                                            {
                                                <option value="@item.Id" selected>@item.Title</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Id">@item.Title</option>
                                            }

                                        }
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="form-group mb-25">
                                <label for="gender_name" class="text-title fs-xx-14 fw-medium d-block mb-13">Gender</label>
                                <select name="gender_name" id="gender_name"  class="fs-xx-14 w-100 ht-56 round-10 bg-ash text-para border-0">
                                    <option value="">Select Gender</option>
                                    <option value="Male" selected="@(ViewBag.Gender == "Male")">Male</option>
                                    <option value="Female" selected="@(ViewBag.Gender == "Female")">Female</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="form-group mb-25">
                                <label for="location" class="text-title  fs-xx-14 fw-medium d-block mb-13">Location</label>
                                <input type="text" placeholder="Type City Name" class="fs-xx-14 w-100 ht-56 round-10 bg-ash text-para border-0" name="location" id="location" value="@ViewBag.location">
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-lg-9">
                            <ul class="search-tag list-unstyled mb-0">
                          
                            </ul>
                        </div>
                        <div class="col-lg-3 text-lg-end">
                            <button type="submit" class="btn style-two d-inline-block font-secondary fw-bold position-relative z-1 round-10 mt-2">
                                <span>
                                    Search Now
                                    <img src="~/img/icons/right-arrow-white.svg" alt="Icon" class="transition icon-left">
                                </span>
                                <img src="~/img/icons/right-arrow-white.svg" alt="Icon" class="transition icon-right">
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row justify-content-center pt-120">
                
            </div>
        </div>
        <!-- Doctor Search Section End -->


        <div class="tab-content">
            <div class="tab-pane fade show active transition" id="tab_1" role="tabpanel">
                <div class="row justify-content-center">

                    @foreach(var doctor in Model) 
                    {
                        <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-6">
                            <div class="doctor-card style-three mb-30 round-20">
                                <div class="doctor-img position-relative round-10 mb-32">
                                    <img src="~/img/doctors/@(doctor.Img)" alt="Image" class="round-10">
                                    <ul class="social-profile list-unstyled mb-0 position-absolute transition">
                                        <li><a href="https://www.facebook.com/" target="_blank" class="d-flex flex-column align-items-center justify-content-center round-5 transition"><i class="ri-facebook-fill"></i></a></li>
                                        <li><a href="https://x.com/?lang=en" target="_blank" class="d-flex flex-column align-items-center justify-content-center round-5 transition"><i class="ri-twitter-x-line"></i></a></li>
                                        <li><a href="https://www.instagram.com/" target="_blank" class="d-flex flex-column align-items-center justify-content-center round-5 transition"><i class="ri-instagram-fill"></i></a></li>
                                        <li><a href="https://www.linkedin.com/" target="_blank" class="d-flex flex-column align-items-center justify-content-center round-5 transition"><i class="ri-linkedin-fill"></i></a></li>
                                    </ul>
                                </div>
                                <div class="doctor-info text-center">
                                    <h3 class="fs-24 fw-extrabold mb-13"><a href="/Doctors/DoctorDetails/@doctor.Id" class="text-title hover-text-primary">@doctor.Name</a></h3>
                                    <span>@doctor.DoctorType</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Doctor Search Section End -->

    <!-- Simple Section Start -->
    <div class="bg-ash promo-area pt-120 pb-90 round-20">
        <div class="container style-one">
            <div class="row justify-content-center">
                <div class="col-xl-4 col-md-6">
                    <div class="promo-card d-flex flex-wrap mb-30">
                        <div class="promo-icon bg-chard d-flex flex-column align-items-center justify-content-center rounded-circle"><img src="~/img/icons/mission.svg" alt="Icon"></div>
                        <div class="promo-info">
                            <h3 class="fs-24 text-title fw-extrabold">Our Mission</h3>
                            <p class="mb-0">Our medical center is dedicated with commitment to excellence we broad from preventive care routine checkups</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6 ps-xxl-5">
                    <div class="promo-card d-flex flex-wrap mb-30">
                        <div class="promo-icon bg-berylGreen d-flex flex-column align-items-center justify-content-center rounded-circle"><img src="~/img/icons/focus.svg" alt="Icon"></div>
                        <div class="promo-info">
                            <h3 class="fs-24 text-title fw-extrabold">Our Mission</h3>
                            <p class="mb-0">Our medical center is dedicated with commitment to excellence we broad from preventive care routine checkups</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-md-6 ps-xxl-5">
                    <div class="promo-card d-flex flex-wrap mb-30">
                        <div class="promo-icon bg-mauve d-flex flex-column align-items-center justify-content-center rounded-circle"><img src="~/img/icons/value.svg" alt="Icon"></div>
                        <div class="promo-info">
                            <h3 class="fs-24 text-title fw-extrabold">Our Mission</h3>
                            <p class="mb-0">Our medical center is dedicated with commitment to excellence we broad from preventive care routine checkups</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Simple Section End -->

    <!-- Why Choose Us Section Start -->
    <div class="wh-area style-four ptb-120">
        <div class="container style-one">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="wh-content mb-lg-30">
                        <h6 class="section-subtitle fw-medium font-primary d-inline-block text_secondary position-relative mb-15" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="200">YOUR HEALTH IS OUR TOP GOAL</h6>
                        <h2 class="section-title fw-black text-title mb-15 me-xxl-5" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="300">Professional Medical Network With Large Directory Listings</h2>
                        <p class="fs-xx-14 mb-38" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="400">With a focus on compassionate and personalized treatment we strive to create a welcoming environment where patients feel valued respected and well informed about their health</p>
                        <ul class="feature-item-list list-unstyled" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="500">
                            <li class="position-relative text-title font-secondary fw-semibold round-10"><img src="~/img/icons/check.svg" alt="Check icon">We Accept Many Insurance Plans And Offer Discounts</li>
                            <li class="position-relative bg-white text-title font-secondary fw-semibold round-10"><img src="~/img/icons/check.svg" alt="Check icon">Friendly Team You Can Call Friends</li>
                            <li class="position-relative bg-white text-title font-secondary fw-semibold round-10"><img src="~/img/icons/check.svg" alt="Check icon">We Use Energy-saving And Waste-reducing Methods</li>
                        </ul>
                        <a href="about.html" class="btn style-two font-secondary fw-semibold position-relative z-1 round-10">
                            <span>
                                View Open Positions
                                <img src="~/img/icons/right-arrow-white.svg" alt="Icon" class="transition icon-left">
                            </span>
                            <img src="~/img/icons/right-arrow-white.svg" alt="Icon" class="transition icon-right">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 ps-xxl-4">
                    <div class="wh-img-wrap bg-f position-relative round-20" data-aos="fade-up" data-aos-duration="1100" data-aos-delay="200">
                        <div class="wh-img-one bg-white position-absolute round-20"><img src="~/img/why-choose-us/wh-img-3.jpg" alt="Image" class="round-20"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Why Choose Us Section End -->
    
</body>
